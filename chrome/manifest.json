{
    "name": "XDM Browser Integration Module",
    "action": {},
    "manifest_version": 3,
    "version": "1.0",
    "description": "Extension to integrate Xtreme Download Manager with Chrome",
    "host_permissions": [
        "*://*/*"
    ],
    "permissions": [
        "downloads",
        "tabs",
        "nativeMessaging",
        "cookies"
    ],
    "background": {
        "service_worker": "main.js",
        "type": "module"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}